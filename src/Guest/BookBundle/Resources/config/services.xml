<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="user_repository.class">Guest\BookBundle\Entity\UserRepository</parameter>
        <parameter key="article_repository.class">Guest\BookBundle\Entity\ArticleRepository</parameter>
    </parameters>

    <services>
        <service id="user_repository"
                 class="%user_repository.class%"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository">
            <argument>Guest\BookBundle\Entity\User</argument>
        </service>
        <service id="article_repository"
                 class="%article_repository.class%"
                 factory-service="doctrine.orm.entity_manager"
                 factory-method="getRepository">
            <argument>Guest\BookBundle\Entity\Article</argument>
        </service>
    </services>

</container>