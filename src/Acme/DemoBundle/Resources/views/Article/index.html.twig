{% extends "AcmeDemoBundle:Article:layout.html.twig" %}

{% block title "Atricle - Home" %}
{% block user user %}

{% block content %}
    <h1 class="title">{{ page.title }}</h1>
    <div>{{ page.description }}</div>

    {% if articles %}
        <div class="articles-block">
            <h2>Articles</h2>
            <ul>
                {% for article in articles %}
                    <li>
                        <p class="article-title">{{ article.title }}</p>
                        <p class="article-created">{{ article.created|date("d/m/Y") }}</p>
                        <div class="article-content">{{ article.content }}</div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}
{% endblock %}