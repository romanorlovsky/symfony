<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="{{ path('_article') }}">Article</a>
        </div>
        <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
                {% set route = app.request.get('_route') %}
                <li{% if route == '_article' %} class="active"{% endif %}><a href="{{ path('_article') }}">Home</a></li>
                <li{% if route == '_article_about' %} class="active"{% endif %}><a href="{{ path('_article_about') }}">About</a></li>
                <li{% if route == '_article_contact' %} class="active"{% endif %}><a href="{{ path('_article_contact') }}">Contact</a></li>
            </ul>
            {% if user %}
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown{% if route == '_user' %} active{% endif %}">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ user.displayName }} <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('_user') }}">Profile</a></li>
                            <li><a href="{{ path('_article') }}">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            {% endif %}
        </div>
        <!--/.nav-collapse -->
    </div>
</div>